{
  "compileOnSave": false,
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "alwaysStrict": false,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "outDir": "../../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": []
  },
  "exclude": [
    "src/test-setup.ts",
    "src/**/*.spec.ts",
    "jest.config.ts",
    "src/**/*.test.ts"
  ],
  "include": ["src/**/*.ts"]
}
